                                        <Label Grid.Column="1" Grid.Row="4" Text="{Binding InventorySync.ColaboradorResponsable.TelefonoMovil}" TextColor="Silver" FontAttributes="Bold"/>
                                        -->
                           
                                   </Grid>
                                   </StackLayout>
                                 </StackLayout>
                               </Frame>
             </StackLayout>


            
