                CornerRadius="40"
                AbsoluteLayout.LayoutFlags="PositionProportional"  
                AbsoluteLayout.LayoutBounds="0.95,0.95,80,80"
                Command="{Binding CreateSettingCommand}" />
            </AbsoluteLayout>
        -->
    </ContentPage.Content>
</ContentPage>