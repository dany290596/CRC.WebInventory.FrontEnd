         <StackLayout Orientation="Horizontal">
            <Frame BackgroundColor="Orange" HasShadow="True" BorderColor="White" HeightRequest="16" WidthRequest="16" CornerRadius="28">
                <Image Source="security.png" HeightRequest="5" WidthRequest="5" />
            </Frame>
